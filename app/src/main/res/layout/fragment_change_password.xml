<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_15sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_corner_radius">
    <TextView
        android:id="@+id/changePasswordLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password_lbl"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/blue"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/passwordEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Password"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:background="@drawable/edt_box"
        android:paddingVertical="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/changePasswordLbl"/>

    <EditText
        android:id="@+id/newPasswordEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/confirm_password_lbl"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:background="@drawable/edt_box"
        android:paddingVertical="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/passwordEdt"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_lbl"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:fontFamily="@font/poppins_medium"
        app:cornerRadius="@dimen/_5sdp"
        android:backgroundTint="@color/yellow"
        app:layout_constraintVertical_bias="0"
        android:layout_marginBottom="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newPasswordEdt"/>


</androidx.constraintlayout.widget.ConstraintLayout>