<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.changePasswordLogin.ChangePasswordLogin">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/changePassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/change_password_lbl"
        android:textColor="@color/blue"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="@id/backArrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backArrow" />

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/current_password_lbl"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/black_200"
        android:textSize="@dimen/_11sdp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/changePassTitle" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/new_password_lbl"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/black_200"
        android:textSize="@dimen/_11sdp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/currentPassword" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/confirm_password_lbl"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:textColor="@color/black_200"
        android:textSize="@dimen/_11sdp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/newPassword" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/updatePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/poppins_medium"
        android:paddingVertical="@dimen/_6sdp"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="@dimen/_12sdp"

        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>