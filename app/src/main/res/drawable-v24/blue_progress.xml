<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_15sdp"/>
            <solid android:color="#c4e7fe"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/_15sdp"/>
                <gradient
                    android:startColor="#0183d4"
                    android:centerColor="#0077c3"
                    android:endColor="#0070b5"
                    />
            </shape>
        </scale>
    </item>
</layer-list>