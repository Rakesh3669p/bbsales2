<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    android:elevation="@dimen/_4sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/revenueImage"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="0.2" />

        <TextView
            android:id="@+id/revenueCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@color/yellow_lite"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="#8v654s"
            android:textColor="@color/red"
            android:textSize="@dimen/_7sdp"
            app:layout_constraintBottom_toTopOf="@+id/revenueName"
            app:layout_constraintStart_toEndOf="@id/revenueImage"
            app:layout_constraintTop_toTopOf="@id/revenueImage"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/revenueName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="MCDonald's"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toTopOf="@+id/revenueCity"
            app:layout_constraintStart_toEndOf="@id/revenueImage"
            app:layout_constraintTop_toBottomOf="@id/revenueCode" />

        <TextView
            android:id="@+id/revenueCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Dubai"
            android:textColor="@color/black_200"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toBottomOf="@id/revenueImage"
            app:layout_constraintStart_toEndOf="@id/revenueImage"
            app:layout_constraintTop_toBottomOf="@id/revenueName" />

        <ImageView
            android:id="@+id/moreIcon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/ic_menu_dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="0.2"
            app:tint="@color/text_grey" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>