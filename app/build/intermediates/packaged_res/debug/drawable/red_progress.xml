<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_15sdp"/>
            <solid android:color="#f7e5e4"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/_15sdp"/>
                <gradient
                    android:startColor="#ff7679"
                    android:centerColor="#fa6f70"
                    android:endColor="#ec5355"
                    />
            </shape>
        </scale>
    </item>
</layer-list>