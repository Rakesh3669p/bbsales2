<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_15sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_corner_radius"
    tools:context=".ui.loginSignUp.ForgotPasswordFragment">

    <TextView
        android:id="@+id/forgotPasswordLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/blue"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/forgotPasswordHintLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_instructions"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:gravity="center"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/text_grey"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/forgotPasswordLbl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/mobileEmailEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mobile number or email id"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:background="@drawable/edt_box"
        android:paddingVertical="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/forgotPasswordHintLbl"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/otpSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_otp_lbl"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:fontFamily="@font/poppins_medium"
        app:cornerRadius="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:backgroundTint="@color/yellow"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileEmailEdt"/>

</androidx.constraintlayout.widget.ConstraintLayout>